'use client';

import { useEffect, useMemo, useRef, useState, type FormEvent } from 'react';
import { usePathname, useRouter } from 'next/navigation';
import {
  categorySlug,
  iconCategoriesFromProduct,
  type IconCategory,
  type IconProduct,
  type KeypadProduct,
} from '../lib/vendure';
import KeypadCard from './KeypadCard';
import ProductCard from './ProductCard';

const PAGE_SIZE_OPTIONS = [24, 48, 96] as const;

function toCardCategoryLabel(categoryNames: string[]) {
  if (categoryNames.length === 0) return 'Uncategorised';
  return categoryNames[0];
}

export default function ShopClient({
  icons,
  keypads,
  categorySourceIcons,
  initialQuery = '',
  initialCategory = '',
  initialSection = 'icons',
  initialPage = 1,
  initialTake = 24,
  pagedTotalItems = 0,
  isIconsPaginationActive = false,
}: {
  icons: IconProduct[];
  keypads: KeypadProduct[];
  categorySourceIcons?: IconProduct[];
  initialQuery?: string;
  initialCategory?: string;
  initialSection?: 'icons' | 'keypads';
  initialPage?: number;
  initialTake?: number;
  pagedTotalItems?: number;
  isIconsPaginationActive?: boolean;
}) {
  const router = useRouter();
  const pathname = usePathname();
  const [activeSection, setActiveSection] = useState<'icons' | 'keypads'>(
    initialSection === 'keypads' ? 'keypads' : 'icons',
  );
  const [query, setQuery] = useState(initialQuery);
  const [activeCategorySlug, setActiveCategorySlug] = useState(
    initialSection === 'keypads' ? '' : initialCategory,
  );
  const [iconsGroupOpen, setIconsGroupOpen] = useState(Boolean(initialCategory));
  const [page, setPage] = useState(Math.max(1, initialPage));
  const [take, setTake] = useState(initialTake);
  const lastParams = useRef('');

  useEffect(() => {
    setQuery(initialQuery ?? '');
  }, [initialQuery]);

  useEffect(() => {
    if (initialSection === 'keypads') {
      setActiveCategorySlug('');
      return;
    }
    setActiveCategorySlug(initialCategory ?? '');
  }, [initialCategory, initialSection]);

  useEffect(() => {
    setActiveSection(initialSection === 'keypads' ? 'keypads' : 'icons');
  }, [initialSection]);

  useEffect(() => {
    setPage(Math.max(1, initialPage));
  }, [initialPage]);

  useEffect(() => {
    setTake(initialTake);
  }, [initialTake]);

  useEffect(() => {
    if (activeCategorySlug) setIconsGroupOpen(true);
  }, [activeCategorySlug]);

  useEffect(() => {
    if (activeSection === 'keypads' && activeCategorySlug) {
      setActiveCategorySlug('');
    }
  }, [activeSection, activeCategorySlug]);

  const categorySeedIcons = categorySourceIcons ?? icons;
  const totalIconCount = categorySeedIcons.length;

  const categories = useMemo<IconCategory[]>(() => {
    const bySlug = new Map<string, IconCategory>();
    for (const icon of categorySeedIcons) {
      for (const categoryName of iconCategoriesFromProduct(icon)) {
        const slug = categorySlug(categoryName);
        const existing = bySlug.get(slug);
        if (existing) {
          existing.count += 1;
        } else {
          bySlug.set(slug, { name: categoryName, slug, count: 1 });
        }
      }
    }
    return Array.from(bySlug.values()).sort((a, b) => {
      if (b.count !== a.count) return b.count - a.count;
      return a.name.localeCompare(b.name);
    });
  }, [categorySeedIcons]);

  const categoriesBySlug = useMemo(() => {
    return new Map(categories.map((category) => [category.slug, category]));
  }, [categories]);

  const categoryNamesByIconId = useMemo(() => {
    const map = new Map<string, string[]>();
    for (const icon of icons) {
      map.set(icon.id, iconCategoriesFromProduct(icon));
    }
    return map;
  }, [icons]);

  const isIconsSection = activeSection === 'icons';
  const isAllIconsView = isIconsSection && !activeCategorySlug;

  useEffect(() => {
    const params = new URLSearchParams();
    params.set('section', activeSection);
    const trimmed = query.trim();
    if (trimmed) params.set('q', trimmed);
    if (activeCategorySlug) params.set('cat', activeCategorySlug);
    if (isIconsSection) {
      params.set('page', String(Math.max(1, page)));
      params.set('take', String(take));
    }
    const next = params.toString();
    if (next === lastParams.current) return;
    lastParams.current = next;
    router.replace(`${pathname}${next ? `?${next}` : ''}`, { scroll: false });
  }, [query, activeCategorySlug, activeSection, isIconsSection, page, take, pathname, router]);

  const filteredIcons = useMemo(() => {
    const trimmed = query.trim().toLowerCase();
    const targetCategory = activeCategorySlug;

    return icons.filter((icon) => {
      const iconCategorySlugs = iconCategoriesFromProduct(icon).map((name) => categorySlug(name));
      const matchesCategory = !targetCategory || iconCategorySlugs.includes(targetCategory);
      if (!matchesCategory) return false;

      if (!trimmed) return true;
      const hay = `${icon.customFields?.iconId ?? ''} ${icon.name ?? ''} ${icon.slug ?? ''}`.toLowerCase();
      return hay.includes(trimmed);
    });
  }, [icons, query, activeCategorySlug]);

  const filteredKeypads = useMemo(() => {
    const trimmed = query.trim().toLowerCase();
    if (!trimmed) return keypads;

    return keypads.filter((keypad) => {
      const hay = `${keypad.name ?? ''} ${keypad.slug ?? ''}`.toLowerCase();
      return hay.includes(trimmed);
    });
  }, [keypads, query]);

  const onSearch = (event: FormEvent<HTMLFormElement>) => {
    event.preventDefault();
    setQuery(query.trim());
    setPage(1);
  };

  const onSectionChange = (section: 'icons' | 'keypads') => {
    if (section === activeSection) return;
    setActiveSection(section);
    if (section === 'keypads') {
      setActiveCategorySlug('');
      return;
    }
    setPage(1);
  };

  const clearFilters = () => {
    setQuery('');
    setActiveCategorySlug('');
    setPage(1);
  };

  const onTakeChange = (nextTake: number) => {
    if (nextTake === take) return;
    setTake(nextTake);
    setPage(1);
  };

  const toProductHref = (slug: string, section: 'icons' | 'keypads', categorySlugValue = '') => {
    const params = new URLSearchParams();
    params.set('from', 'shop');
    params.set('section', section);
    if (section === 'icons' && categorySlugValue) {
      params.set('cat', categorySlugValue);
    }
    return `/product/${slug}?${params.toString()}`;
  };

  const isIconsPaginationMode = isAllIconsView && isIconsPaginationActive;
  const isCategoryPaginationMode =
    isIconsSection &&
    !isIconsPaginationMode &&
    Boolean(activeCategorySlug) &&
    filteredIcons.length > PAGE_SIZE_OPTIONS[0];
  const isAnyIconsPaginationMode = isIconsPaginationMode || isCategoryPaginationMode;
  const paginationTotalItems = isIconsPaginationMode ? pagedTotalItems : filteredIcons.length;
  const totalPages = Math.max(1, Math.ceil(paginationTotalItems / Math.max(1, take)));
  const displayedIcons = useMemo(() => {
    if (!isIconsSection) return [];
    if (!isCategoryPaginationMode) return filteredIcons;
    const start = (Math.max(1, page) - 1) * take;
    return filteredIcons.slice(start, start + take);
  }, [isIconsSection, isCategoryPaginationMode, filteredIcons, page, take]);
  const activeCategoryLabel = activeCategorySlug
    ? categoriesBySlug.get(activeCategorySlug)?.name ?? activeCategorySlug
    : '';
  const searchPlaceholder = isIconsSection
    ? 'Search by icon ID or name'
    : 'Search by product name or ID';
  const visibleResultCount = isIconsSection ? displayedIcons.length : filteredKeypads.length;
  const visibleResultLabel = isIconsSection ? 'icons' : 'keypads';
  const availableResultCount = isIconsSection
    ? (isAnyIconsPaginationMode ? paginationTotalItems : filteredIcons.length)
    : filteredKeypads.length;
  const activeChips = [
    ...(query.trim() ? [{ label: `Search: ${query.trim()}`, onClear: () => setQuery('') }] : []),
    ...(activeCategorySlug
      ? [{ label: `Category: ${activeCategoryLabel}`, onClear: () => setActiveCategorySlug('') }]
      : [])
  ];

  useEffect(() => {
    if (!isIconsSection) return;
    if (page > totalPages) {
      setPage(totalPages);
    }
  }, [isIconsSection, page, totalPages]);

  const renderIconPaginationControls = (location: 'top' | 'bottom') => {
    if (!isIconsSection || !isAnyIconsPaginationMode) return null;

    const selectId = `shop-page-size-${location}`;
    const wrapperClass =
      location === 'top'
        ? 'mt-6 mb-6 flex flex-wrap items-center justify-between gap-3 rounded-2xl border border-ink/10 px-4 py-3 text-xs text-ink/60'
        : 'mt-6 flex flex-wrap items-center justify-between gap-3 rounded-2xl border border-ink/10 px-4 py-3 text-xs text-ink/60';

    return (
      <div className={wrapperClass}>
        <span>
          Page <span className="font-semibold text-ink">{page}</span> of{' '}
          <span className="font-semibold text-ink">{totalPages}</span> ({paginationTotalItems} total icons)
        </span>
        <div className="flex flex-wrap items-center gap-2">
          <label htmlFor={selectId} className="text-ink/60">Per page</label>
          <select
            id={selectId}
            value={take}
            onChange={(event) => onTakeChange(Number(event.target.value))}
            className="rounded-full border border-ink/15 bg-white px-3 py-1 text-xs font-semibold text-ink"
          >
            {PAGE_SIZE_OPTIONS.map((option) => (
              <option key={option} value={option}>
                {option}
              </option>
            ))}
          </select>
          <button
            type="button"
            onClick={() => setPage((current) => Math.max(1, current - 1))}
            disabled={page <= 1}
            className="rounded-full border border-ink/15 px-3 py-1 font-semibold text-ink transition hover:border-ink/30 disabled:cursor-not-allowed disabled:opacity-50"
          >
            Prev
          </button>
          <button
            type="button"
            onClick={() => setPage((current) => Math.min(totalPages, current + 1))}
            disabled={page >= totalPages}
            className="rounded-full border border-ink/15 px-3 py-1 font-semibold text-ink transition hover:border-ink/30 disabled:cursor-not-allowed disabled:opacity-50"
          >
            Next
          </button>
        </div>
      </div>
    );
  };

  return (
    <div className="mx-auto w-full max-w-6xl px-6 pb-20 pt-10">
      <div className="mb-8 flex flex-col gap-4">
        <div className="flex flex-wrap items-end justify-between gap-4">
          <div>
            <div className="pill">{isIconsSection ? 'Insert Catalog' : 'Keypad models'}</div>
            <h1 className="mt-3 text-3xl font-semibold tracking-tight text-ink md:text-4xl">
              {isIconsSection ? 'Explore Inserts: Curated by Discipline.' : 'Spec Your KeyPad: Precision Defined'}
            </h1>
            {!isIconsSection && (
              <p className="mt-2 text-sm text-ink/60">Compare keypad models, then continue to configuration.</p>
            )}
          </div>
          <div className="text-sm text-ink/60">
            {availableResultCount} {visibleResultLabel} available
          </div>
        </div>
        <form onSubmit={onSearch} className="flex flex-col gap-3 md:flex-row">
          <input
            value={query}
            onChange={(event) => {
              setQuery(event.target.value);
              setPage(1);
            }}
            placeholder={searchPlaceholder}
            className="input flex-1"
            aria-label={isIconsSection ? 'Search icons' : 'Search keypads'}
          />
          <button type="submit" className="btn-primary">Search</button>
          {(query || activeCategorySlug) && (
            <button type="button" className="btn-ghost" onClick={clearFilters}>
              Clear filters
            </button>
          )}
        </form>
      </div>

      <div className="grid gap-8 lg:grid-cols-[280px_1fr]">
        <aside className="space-y-6">
          <div className="card p-5">
            <div className="text-xs font-semibold uppercase tracking-wide text-ink/40">
              Categories
            </div>
            <div className="mt-4 space-y-2">
              <button
                type="button"
                aria-pressed={isIconsSection}
                aria-expanded={iconsGroupOpen}
                aria-controls="icons-subcategories"
                onClick={() => {
                  if (!isIconsSection) {
                    setActiveSection('icons');
                    setPage(1);
                  }
                  setIconsGroupOpen((prev) => !prev);
                }}
                className={`flex w-full items-center justify-between rounded-xl border px-3 py-1.5 text-left text-sm font-semibold transition ${
                  isIconsSection
                    ? 'border-ink/30 bg-ink/5 text-ink'
                    : 'border-ink/10 text-ink/70 hover:border-ink/25'
                }`}
              >
                <span>Icons</span>
                <span className="flex items-center gap-2 text-ink/40">
                  <span className="text-[11px]">{totalIconCount}</span>
                  <span className={`text-base transition ${iconsGroupOpen ? 'rotate-90' : ''}`}>&gt;</span>
                </span>
              </button>

              {isIconsSection && iconsGroupOpen && (
                <div id="icons-subcategories" className="ml-3 flex flex-col gap-2 border-l border-ink/10 pl-3">
                  <button
                    type="button"
                    onClick={() => {
                      setActiveCategorySlug('');
                      setPage(1);
                    }}
                    className={`flex w-full items-center justify-between rounded-xl px-3 py-1.5 text-left text-sm font-semibold transition ${
                      !activeCategorySlug ? 'bg-ink text-white' : 'text-ink/70 hover:text-ink'
                    }`}
                  >
                    <span>All icons</span>
                    <span className={`${!activeCategorySlug ? 'text-white/70' : 'text-ink/40'}`}>{totalIconCount}</span>
                  </button>

                  {categories.map((category) => (
                    <button
                      key={category.slug}
                      type="button"
                      onClick={() => {
                        setActiveCategorySlug(category.slug);
                        setPage(1);
                      }}
                      className={`flex w-full items-center justify-between rounded-xl border px-3 py-1.5 text-left text-sm font-semibold transition ${
                        activeCategorySlug === category.slug
                          ? 'border-ink/30 bg-ink/5 text-ink'
                          : 'border-ink/10 text-ink/70 hover:border-ink/25'
                      }`}
                    >
                      <span>{category.name}</span>
                      <span className="text-[11px] text-ink/35">{category.count}</span>
                    </button>
                  ))}
                </div>
              )}

              <button
                type="button"
                aria-pressed={!isIconsSection}
                onClick={() => onSectionChange('keypads')}
                className={`flex w-full items-center justify-between rounded-xl px-3 py-1.5 text-sm font-semibold transition ${
                  !isIconsSection
                    ? 'bg-ink text-white'
                    : 'border border-ink/10 text-ink/70 hover:border-ink/25 hover:text-ink'
                }`}
              >
                <span>Keypads</span>
                <span className={`text-[11px] ${!isIconsSection ? 'text-white/70' : 'text-ink/35'}`}>{keypads.length}</span>
              </button>
            </div>
          </div>
        </aside>

        <section>
          <div className="mb-4 flex flex-wrap items-center justify-between gap-3 text-sm text-ink/60">
            <span>
              Showing <span className="font-semibold text-ink">{visibleResultCount}</span> {visibleResultLabel}
            </span>
            {activeChips.length > 0 ? (
              <div className="flex flex-wrap gap-2">
                {activeChips.map((chip) => (
                  <button
                    key={chip.label}
                    type="button"
                    onClick={chip.onClear}
                    className="flex items-center gap-2 rounded-full border border-ink/10 px-3 py-1 text-xs font-semibold text-ink/70 transition hover:border-ink/25"
                  >
                    <span>{chip.label}</span>
                    <span className="text-ink/40">x</span>
                  </button>
                ))}
              </div>
            ) : (
              <span className="rounded-full border border-ink/10 px-3 py-1 text-xs font-semibold uppercase tracking-wide">
                {isIconsSection ? 'All categories' : 'All keypads'}
              </span>
            )}
          </div>
          {renderIconPaginationControls('top')}

          {visibleResultCount === 0 ? (
            <div className="card-soft p-8 text-sm text-ink/60">
              {isIconsSection
                ? 'No icons match that search. Try a different query or category.'
                : 'No keypads match that search. Try a different query.'}
            </div>
          ) : isIconsSection ? (
            <div className="staggered grid gap-4 sm:grid-cols-2 xl:grid-cols-3">
              {displayedIcons.map((icon) => (
                <ProductCard
                  key={icon.id}
                  product={icon}
                  categoryLabel={toCardCategoryLabel(categoryNamesByIconId.get(icon.id) ?? [])}
                  productHref={toProductHref(icon.slug, 'icons', activeCategorySlug)}
                />
              ))}
            </div>
          ) : (
            <div className="staggered grid gap-6 sm:grid-cols-2 xl:grid-cols-3">
              {filteredKeypads.map((keypad) => (
                <KeypadCard
                  key={keypad.id}
                  product={keypad}
                  mode="shop"
                  learnMoreHref={toProductHref(keypad.slug, 'keypads')}
                />
              ))}
            </div>
          )}

          {renderIconPaginationControls('bottom')}
        </section>
      </div>
    </div>
  );
}
